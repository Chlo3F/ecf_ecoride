{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <!-- Barre de recherche -->
    <div class="search-bar">
        <form class="search-bar">
            <input type="text" id="search-input" placeholder="Départ">
            <input type="text" placeholder="Arrivée">
            <input type="date">
            <button type="button" id="search-btn" class="btn btn-primary">Rechercher</button>
            <button type="button" id="filter-btn" class="btn btn-secondary">Filtrer</button>
        </form>
        
    </div>

    <!-- Options de filtrage (cachées par défaut) -->
    <div id="filter-options" style="display: none; margin-top: 15px; padding: 15px; border: 1px solid #ddd; border-radius: 5px;">
        <h5>Filtrer les résultats</h5>

        <!-- Voyage écologique -->
        <div class="form-check">
            <input class="form-check-input" type="radio" name="eco" id="eco-yes" value="yes">
            <label class="form-check-label" for="eco-yes">Voyage écologique</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="eco" id="eco-no" value="no">
            <label class="form-check-label" for="eco-no">Peu importe</label>
        </div>

        <!-- Durée maximum du trajet -->
        <div class="mt-2">
            <label for="duration">Durée max du trajet (heures) :</label>
            <input type="number" id="duration" class="form-control" min="1">
        </div>

        <!-- Nombre de crédits maximum -->
        <div class="mt-2">
            <label for="max-credits">Crédits maximum :</label>
            <input type="number" id="max-credits" class="form-control" min="0">
        </div>

        <!-- Note minimum du conducteur -->
        <div class="mt-2">
            <label for="min-rating">Note minimale du conducteur :</label>
            <select id="min-rating" class="form-control">
                <option value="0">0 ★</option>
                <option value="1">1 ★</option>
                <option value="2">2 ★</option>
                <option value="3">3 ★</option>
                <option value="4">4 ★</option>
                <option value="5">5 ★</option>
            </select>
        </div>

        <!-- Bouton "Appliquer les filtres" -->
        <button id="apply-filters" class="btn btn-success mt-3">Appliquer les filtres</button>
    </div>

    <!-- Conteneur des résultats, caché par défaut -->
    <div id="results-container" style="display: none; margin-top: 20px;">
        <h3>Résultats de la recherche</h3>
        <ul id="search-results" class="list-group">
            <!-- Les résultats seront insérés ici dynamiquement -->
        </ul>
    </div>
</div>
{% endblock %}
