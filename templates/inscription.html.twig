{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 400px;">
        <h2 class="text-center mb-4" id="form-title">Inscription</h2>


        <!-- Formulaire d'Inscription (caché par défaut) -->
        <form id="register-form" method="post">
            <div class="mb-3">
                <label for="nom" class="form-label">Nom</label>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'id': 'nom'}}) }}
                {{ form_errors(form.nom) }}
            </div>
        
            <div class="mb-3">
                <label for="prenom" class="form-label">Prénom</label>
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'id': 'prenom'}}) }}
                {{ form_errors(form.prenom) }}
            </div>
        
            <div class="mb-3">
                <label for="pseudo" class="form-label">Pseudo</label>
                {{ form_widget(form.pseudo, {'attr': {'class': 'form-control', 'id': 'pseudo'}}) }}
                {{ form_errors(form.pseudo) }}
            </div>
        
            <div class="mb-3">
                <label for="adresse" class="form-label">Adresse</label>
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'id': 'adresse', 'autocomplete': 'street-address'}}) }}
                {{ form_errors(form.adresse) }}
            </div>
                          
            <div class="mb-3">
                <label for="telephone" class="form-label">Téléphone</label>
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'id': 'telephone', 'pattern': '^(\+?\d{1,3}[- ]?)?\d{10}$'}}) }}
                {{ form_errors(form.telephone) }}
            </div>
        
            <div class="mb-3">
                <label for="date_naissance" class="form-label">Date de naissance</label>
                {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control', 'id': 'date_naissance'}}) }}
                {{ form_errors(form.dateNaissance) }}
            </div>        
        
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'email'}}) }}
                {{ form_errors(form.email) }}
            </div>
        
            <div class="mb-3">
                <label for="password1" class="form-label">Mot de passe</label>
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control', 'id': 'password1'}}) }}
                {{ form_errors(form.password.first) }}
            </div>
        
            <div class="mb-3">
                <label for="password2" class="form-label">Confirmer le mot de passe</label>
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control', 'id': 'password2'}}) }}
                {{ form_errors(form.password.second) }}
            </div>
        
            <button type="submit" class="btn btn-success w-100">S'inscrire</button>
            {{ form_row(form._token) }}
            <p class="text-center mt-3">
                Déjà un compte ? <a href="{{ path('connexion')}}" id="show-login">Se connecter</a>
            </p>
        </form>
    </div>
</div>



{% endblock %}
